BoxLayout:
    orientation: 'vertical'
    BoxLayout:  # top bar, swap mode/leave button
        id: bar
        size_hint: 1, 0.1
        orientation: 'horizontal'
        Button:
            text: 'swap mode'
            on_press: app.swap_mode()
        Button:
            text: 'leave'
            on_press: app.quit()
        Button:
            text: 'settings'
            size_hint: 0.2, 1
            on_press: app.toggle_settings()

    BoxLayout:  # phone layout
        orientation: 'vertical'
        id: phone

        BoxLayout:
            orientation: 'horizontal'
            padding: 5,0,0,0

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, 1
                canvas:
                    Color:
                        rgb: 0, 1, 1
                InteractableImage:
                    id: 'mouse_pad'
                    source: 'kivy files/circle.png'
                Slider:
                    orientation: 'horizontal'
                    size_hint: 1, 0.2
                    min: 0
                    max: 1
                    value: 0
                    on_touch_move: app.mouse_sensitivity_changed(self)

            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'vertical'
                padding: 5,5

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 0.5
                    padding: 0, 1, 0, 1
                    Button:
                        id: toggle_connection_btn
                        size_hint: 0.5, 1
                        text: 'disconnect/connect'
                        on_press: app.toggle_connect()
                    Spinner:
                        size_hint: None, 1
                        id: phone_ip_spinner
                        on_text: app.select_target_ip(self.text)
                        
                Button:
                    text: 'mouse 2'
                    on_press: app.on_mouse_2(0)
                    on_release: app.on_mouse_2(1)
                Button:
                    text: 'mouse 1'
                    on_press: app.on_mouse_1(0)
                    on_release: app.on_mouse_1(1)

        BoxLayout:
            BoxLayout:
                id: keyboard_parent # may not be needed
                orientation: 'vertical'
                padding: 5,0,5,5
                size_hint: 1,1

                BoxLayout:
                    size_hint: 1, 0.3
                    Button:
                        size_hint: 1, 1
                        text: 'send'
                        on_press: app.on_enter_pressed()
                    Button:
                        id: toggle_sentence_send_btn
                        size_hint: 0.4, 1
                        on_press: app.toggle_sentence_send()
                TextInput:
                    id: input
                    hint_text:'Your virtual keyboard is here...'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    # size_hint: 1, .15
                    on_text: app.on_text_changed()



    BoxLayout:  # pc loadout
        id: pc
        height: 0
        size_hint_y: 0
        opacity: 0
        disabled: True

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:  # top
                orientation: 'horizontal'
                size_hint: 1, 1.5
                BoxLayout:  # left
                    orientation: 'vertical'

                    Button:
                        id: toggle_server_connection_btn
                        text: 'default'
                        on_press: app.toggle_activity()

                    BoxLayout:
                        orientation: 'horizontal'
                        Label:
                            text: 'is connected:'
                        CheckBox:
                            canvas.before:
                                Color:
                                    rgb: 1,1,1
                                Rectangle:
                                    pos:self.center_x-7, self.center_y-7
                                    size:[14,14]
                            id: connected_checkbox
                            # on_active: app.disconnect2(connected_checkbox.active)
                            size_hint: .5,1

                BoxLayout:  # top right
                    orientation: 'vertical'
                    Label:
                        text: 'my ip:'
                        size_hint: 1, 0.2
                    Label:
                        id: code_display
                        text: ''
                        size_hint: 1, 0.2
                    BoxLayout:
                        orientation: 'vertical'
                        Spinner:
                            size_hint: 1, 0.8
                            id: pc_ip_spinner
                            orientation: 'vertical'
                            on_text: app.select_target_ip(self.text)
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: 1, 0.4
                            TextInput:
                                id: pc_ip_add_name
                                hint_text: 'device display name'
                            TextInput:
                                id: pc_ip_add_ip
                                hint_text: 'device ip'
                            Button:
                                text: 'create ip profile'
                                on_press: app.make_new_ip()

            BoxLayout:  # bottom
                orientation: 'horizontal'
                size_hint: 1, 0.2

                BoxLayout:  # bottom left
                    orientation: 'vertical'
                    Button:
                        text: 'disconnect'
                        on_press: app.disconnect()

                BoxLayout:  # bottom right
                    Button:
                        text: 'toggle ip'
                        on_press: app.toggle_code()

